{
  "name": "truffle-shavings",
  "version": "1.0.0",
  "description": "Truffle Boilerplate with solium, linguist, zeppelin, migrations, tests &tc",
  "scripts": {
    "compile": "npx truffle compile",
    "migrate": "npx truffle migrate",
    "test": "npx truffle test test/*.test.js",
    "deploy": "npx truffle migrate --reset --compile-all",
    "lint": "npx solium --dir contracts/",
    "lint:watch": "snpx olium --watch --dir contracts/",
    "lint:fix": "npx solium  --dir contracts/ --fix"
  },
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "devDependencies": {
    "bignumber.js": "^8.0.1",
    "dotenv": "^5.0.1",
    "openzeppelin-solidity": "2.1.3",
    "solium": "^1.1.7",
    "truffle": "^5.0.9",
    "truffle-hdwallet-provider": "^1.0.0-web3one.3"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/okwme/truffle-boilerplate.git"
  },
  "keywords": [
    "truffle",
    "ethereum",
    "web3"
  ],
